{
	"name": "valerii-vasyliev/weather-widget",
	"description": "WordPress Weather Dashboard Widget ",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"version": "0.1.0",
	"vendor-dir": "vendor",
  "config": {
    "platform": {
      "php": "7.4"
    },
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"composer/installers": true
		}
  },
  "require": {
    "composer/installers": "^1.9"
   },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.5",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "wp-coding-standards/wpcs": "^2.3",
    "brain/monkey": "^2.6",
    "codeception/codeception": "^4.1",
    "codeception/module-asserts": "^1.3",
    "codeception/module-db": "^1.1",
    "codeception/module-webdriver": "^1.2"
  },
  "autoload": {
      "psr-4": {
        "WeatherWidget\\": "src/"
      }
   },
  "scripts": {
    "cs": "vendor/bin/phpcs --standard=phpcs.xml",
    "cs-fix": "vendor/bin/phpcbf -v --standard=phpcs.xml",
    "unit": "php vendor/bin/codecept run -vvv unit -c .codeception.yml"
  }
}
